<?xml version="1.0" encoding="utf-8"?>
<!-- 1. 최상단 DrawerLayout: 슬라이드 메뉴를 쓰기 위한 필수 레이아웃 -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 2. 실제 화면 콘텐츠 영역 -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 상단 툴바: 햄버거 버튼이 들어갈 자리 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
            app:title="나의 앱"
            app:titleTextColor="@android:color/white" />

        <!-- 버튼들이 들어갈 본문 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하는 메뉴를 선택하세요"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <!-- 2x3 버튼 그리드 (화면을 꽉 채우도록 설정) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins">

                <Button android:id="@+id/menu_btn1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 1" android:textSize="16sp" />
                <Button android:id="@+id/menu_btn2" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 2" android:textSize="16sp" />
                <Button android:id="@+id/menu_btn3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 3" android:textSize="16sp" />
                <Button android:id="@+id/menu_btn4" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 4" android:textSize="16sp" />
                <Button android:id="@+id/menu_btn5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 5" android:textSize="16sp" />
                <Button android:id="@+id/menu_btn6" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:layout_margin="4dp" android:text="메뉴 6" android:textSize="16sp" />
            </GridLayout>

            <!-- 로그아웃 버튼 (하단 고정) -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:text="로그아웃"
                android:backgroundTint="#FF5252"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 3. 슬라이드 메뉴 (NavigationView): 왼쪽에서 슥 나오는 부분 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" /> <!-- 미리 만드신 메뉴 파일 연결 -->

</androidx.drawerlayout.widget.DrawerLayout>