<?xml version="1.0" encoding="utf-8"?>
<!-- 1. 최상단 DrawerLayout: 슬라이드 메뉴를 쓰기 위한 필수 레이아웃 -->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 2. 실제 화면 콘텐츠 영역 -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <!-- Header area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@color/surface"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TURTLE NECK"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하는 기능을 선택하세요"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <!-- 버튼들이 들어갈 본문 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 2x3 버튼 그리드 (화면을 꽉 채우도록 설정) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Using MaterialButton with White background to look like cards -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn1"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn3"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn4"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn5"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menu_btn6"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="메뉴 6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:backgroundTint="@color/menu_button_bg"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/primary"/>
            </GridLayout>

            <!-- 로그아웃 버튼 (하단 고정) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="로그아웃"
                android:backgroundTint="#F0F0F0"
                android:textColor="@color/error"
                app:cornerRadius="28dp"
                android:elevation="0dp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>